<style>

    .div_container{
        margin-top: 3%;
    }
    .main_text{
        display: flex;
        flex-direction: column;
        grid-column: 1 / 7;
        text-align: center;
        word-break: break-word;
        color: rgb(0, 0, 0);
        font-size: 27px;
        margin-top: 30px;
    }
    .button_div{
        /*margin: 25px 0px 0px;*/
        display: flex;
        -webkit-box-pack: center;
        justify-content: center;
        position: relative;
        flex-direction: column;
    }
    .button_main{
        flex-wrap: wrap;
        -webkit-box-pack: center;
        justify-content: center;
        font-weight: 600;
        border: 1px none;
        text-align: center;
        cursor: pointer;
        opacity: 1;
        word-break: break-word;
        outline: none;
        color: rgb(255, 255, 255);
        width: auto;
        padding: 9px 25px;
        font-size: 21px;
        align-self: center;
        background-color: rgb(1, 116, 199);
        border-radius: 5px;
        display: flex !important;
    }
    .how{
        word-break: break-word;
        color: rgb(0, 0, 0);
        font-size: 32px;
        margin-top: 20px;
        text-align: center;
    }
    .text{
        word-break: break-word;
        color: rgb(0, 0, 0);
        font-size: 20px;
        margin: 0px;
        text-align: center;
    }
    .card{
        /*margin-right: 20px;*/
        display: grid;
        -webkit-box-pack: justify;
        justify-content: space-between;
        /*grid-template-columns: repeat(12, 1fr);*/
        padding: 20px 30px;
        box-shadow: rgba(0, 0, 0, 2) 0px 1px 5px 0px;
        background-color: rgb(255, 255, 255);
        background-image: none;
        column-gap: unset !important;
    }
    .f-20{
        font-size: 25px;
    }
    .no_flex{
        flex-wrap: nowrap;
    }
    .logo{
        width: 36px;
    }
    .name{
        padding-left: 10px;
        font-size: 18pt;
        font-weight: 700;
    }
    .cStkQp {
        float: right;
        margin-top: 13px;
        margin-right: 10px;
        margin-left: 10px;
        list-style: none;
        padding: 0px;
    }
</style>

<div class="div_container">
  <div class="row">
    <div class="col-lg-12 main_text">
      <b>Your 7 Day Free Trial Has Expired!</b>
      <p>Please purchase one of the subscriptions below to continue getting feedback from your customers!</p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 how">
      <strong>Pricing</strong>
    </div>
  </div>
  <br>
  <div class="row">
    <% @subscriptions.each do |s| %>
      <div class="col-lg-4">
        <div class="card">
          <div class="row">
            <div class="text-center">
              <strong class="f-20"><%= s.name %></strong>
              <h3>$<%= s.price %>/mo</h3>
              <p><%= s.description %></p>
              <br>
              <%= link_to "Buy Subscription",charges_path(s_id: s.id),class: "btn btn-primary button_main" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br><br><br>
  <div class="row">
    <div class="col-lg-6">
      <%=
        link_to root_path, class: 'navbar-brand' do
          app_name = content_tag :span, 'feedbackuser',class: "name"
          logo = image_tag(asset_pack_path('media/images/logo.png'), class: 'logo')

          Rails.application.show_logo? ? logo + app_name : app_name
        end
      %>
    </div>
    <div class="col-lg-6">
      <ul class="sc-rBLzX cStkQp">
        <li>© 2021 feedbackuser.com</li>
      </ul>
    </div>
  </div>
